<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_collect"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_uncollect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_buy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_buy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/img_collect"
        app:layout_constraintRight_toLeftOf="@id/txt_buy">
        <ImageView
            android:id="@+id/img_car"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_car"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/txt_number"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:textColor="@color/white"
            android:background="@drawable/txt_car_bg"
            android:text="10"
            android:textSize="8sp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="25dp"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/txt_buy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:text="立即购买"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/layout_buy"
        app:layout_constraintRight_toLeftOf="@id/txt_car"></TextView>
    <TextView
        android:id="@+id/txt_car"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:text="加入购物车"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/txt_buy"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/red"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>